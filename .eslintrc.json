{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["import", "@typescript-eslint", "prettier"],
    "rules": {
        "jsx-a11y/alt-text": "off"
    },
    "settings": {
        "import/resolver": {
            "node": { "moduleDirectory": ["node_modules", "src/"] }
        }
    }
}
